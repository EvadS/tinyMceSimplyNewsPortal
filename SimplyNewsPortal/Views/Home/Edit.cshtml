@model SimplyNewsPortal.Models.BlogPost

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование</h2>


@using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Содержание новости</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-sm-2 " })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Введите заголовок новости" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostedOn, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.PostedOn, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PostedOn)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tags, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Tags, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Tags)
            </div>
        </div>

        <div class="form-group">
            <h5>
                @Html.LabelFor(model => model.Content, new { @class = "control-label col-sm-2" })
            </h5>
            <div class="col-sm-12">
                <div class="well well-sm">
                    @Html.Raw(HttpUtility.HtmlDecode(Model.Content));
                @Html.ValidationMessageFor(model => model.Content)
                </div>
            </div>
        </div>

        <div class="col-sm-10">
            @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn btn-default" })
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

    </fieldset>
}

<script src="~/Scripts/jquery-ui-1.12.0.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/NewsPortal/dateTimePicker.js"></script>

<script type="text/javascript" src='~/Scripts/tinymce/tinymce.js'></script>
<script src="~/Scripts/NewsPortal/tinyMceEditSetting.js"></script>

<link href="~/Content/Site.css" rel="stylesheet" />





